html
    height: 100%

body
    color: #333
    min-height: 100%

pre, code
    font-family: "Monaco", monospace

#query
    .command
        position: relative
    .presets
        position: absolute
        top: 5px
        right: 10px

#results
    tr:hover
        td { background: rgba(250,250,200,0.4) }
    td
        font-size: 12px
        padding: 5px 10px
        vertical-align: top
        text-overflow: ellipsis
    .key
        color: #334
    .value
        border-left: 1px solid #ddd

#footer
    min-height: 60px
    padding: 10px 0
    background: url(http://twimg0-a.akamaihd.net/profile_images/3360574989/92fc472928b444980408147e5e5db2fa_bigger.png) no-repeat right bottom